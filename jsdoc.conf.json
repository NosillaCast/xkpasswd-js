{
  "opts": {
    "encoding": "utf8",
    "pedantic": true,
    "readme": "./README.md"
  },
  "source": {
    "include": [
      "./src/"
    ],
    "includePattern": ".+\\.(mjs|js|jsdoc)$"
  },
  "plugins": [
    "plugins/markdown"
  ],
  "tags": {
    "allowUnknownTags": false,
    "dictionaries": [
      "jsdoc",
      "closure"
    ]
  },
  "scripts": {
    "docs": "npx jsdoc -c ./jsdoc.conf.json --destination ./docs",
    "test": "echo \"Error: no test specified\" && exit 1"
  }
}
